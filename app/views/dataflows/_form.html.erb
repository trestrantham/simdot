<%= simple_form_for @dataflow, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :dataset_id %>
  <%= f.input :interface_id %>
  <%= f.input :frequency_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                dataflows_path, :class => 'btn' %>
  </div>
<% end %>
