<%= simple_form_for @interface, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :source_system_id %>
  <%= f.input :target_system_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                interfaces_path, :class => 'btn' %>
  </div>
<% end %>
